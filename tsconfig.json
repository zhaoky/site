{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "outDir": "docs/.vitepress/dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "docs/**/*",
    "docs/.vitepress/**/*",
    "typings/typings.d.ts"
  ]
}